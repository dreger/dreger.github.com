:root{--accent: #21bf73;--accent: #fd5e53;--accent-yellow: #FFC200;--accent: #40e0d0;--accent: #222;--text: rgba(0,0,0,.9);--faded: #eee;--faded-text: #757575;--bg: #F4F0EB;--bg: #fff;--font: 'IBM Plex Sans', verdana;--font-bold: bold;--max-width: 51rem;--max-width-column:34rem;--max-width-column:40rem}::selection{background-color:var(--accent)}*{box-sizing:border-box}html{font-size:20px}body{-webkit-font-smoothing:subpixel-antialiased;-webkit-text-size-adjust:100%;color:var(--text);font-family:var(--font);font-weight:400;margin:0 auto;padding:0;background:var(--bg);line-height:1.4;min-height:100vh;text-rendering:optimizeLegibility;font-feature-settings:"liga","case","calt","ss01","locl"}h1,h2,h3,img,blockquote,ul,ol,p{margin:0 0 1rem}code{font-family:var(--font)}strong{font-weight:700}h1,h2,h3{font-family:var(--font);font-weight:400;line-height:1.2}h1{font-size:2rem;margin-bottom:2rem}h2{margin-top:2.5rem;font-size:1rem;font-weight:700}ul{list-style:square;padding-left:1.1rem}li{margin-bottom:.5rem}a{color:var(--text);text-decoration:none;border-bottom:2px solid rgba(0,0,0,.1)}a:hover{border-color:var(--accent-yellow);color:var(--accent-yellow)}hr{margin:3rem 0;height:2px;background:var(--faded);border:0}img{height:auto;display:block;margin-bottom:1.25rem;border:solid 2px var(--faded);border-radius:4px;width:160%}img:hover{border-color:var(--accent)}form{display:flex}input{width:70%;margin-right:.5rem}button{width:30%}input,button{border:solid 2px var(--faded);font-size:.875rem;padding:.5rem 1rem;background:0 0;line-height:1;border-radius:2px;font-family:var(--font)}input:focus{border-color:var(--accent);outline:none}button{background:var(--accent);border-color:var(--accent)}.meta{color:var(--faded-text);margin-bottom:.5rem}.footer{font-size:.875rem;padding-top:2rem}.footer a{color:var(--faded-text)}.wrapper{max-width:var(--max-width);margin:0 auto 2rem;padding:0 1rem}.column{max-width:var(--max-width-column);padding:2rem 0}.title{background-image:url(/images/icon.